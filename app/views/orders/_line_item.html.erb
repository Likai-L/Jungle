<% product = Product.find(line_item.product_id)%>

<tr>
  <td>
    <%= image_tag product.image.tiny.url %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    $<%= product.price %>
  </td>
  <td>
    <div>
    <%= line_item.quantity %>
    </div>
  </td>
  <td>
    $<%= product.price * line_item.quantity %>
  </td>
</tr>
